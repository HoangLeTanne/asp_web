@{
    ViewData["Title"] = "Create";
}

@model PhongBan
<div class="container">
    <h3>Thêm phòng ban</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Tên phòng ban</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Numberofemployees">Số lượng nhân viên</label>
            <input asp-for="Numberofemployees" type="text" class="form-control" />
            <span asp-validation-for="Numberofemployees" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}